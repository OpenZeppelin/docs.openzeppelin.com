<div class="article-wrapper">
	<article class="article doc">
		<h1>{{{page.title}}}</h1>
		{{{page.contents}}}
                <div class="article-navigation">
                {{#if page.previous}}
                 	<div class="btn-previous"><a href="{{{page.previous.url}}}">&larr; {{{page.previous.content}}}</a></div>
                {{/if}}
                {{#if page.next}}
                	<div class="btn-next"><a href="{{{page.next.url}}}">{{{page.next.content}}} &rarr;</a></div>
                {{/if}}
                </div>
	</article>
	{{> toc}}
</div>
