<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="{{@root.site.ui.url}}/images/favicon.ico" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{#if keywords}}
      <meta name="keywords" content="{{keywords}}">
    {{/if}}
    {{#each customTags}}
      <meta name="{{@key}}" content="{{.}}">
    {{/each}}
    {{#if page.url}}
    <link rel="canonical" href="{{canonicalize page.url}}">
    {{/if}}
    {{> head }}
    <link rel="stylesheet" href="{{@root.site.ui.url}}/dist/index.css">
    <title>{{#if page.title}}{{{page.title}}} - {{/if}}{{site.title}}</title>
    <meta name="twitter:card" content="summary">
    <meta property="og:title" content="{{#if page.title}}{{{page.title}}} - {{/if}}{{site.title}}">
    <meta property="og:image" content="{{@root.site.url}}{{@root.site.ui.url}}/images/social.png">
    {{#if description}}
      <meta name="description" content="{{description}}">
      <meta property="og:description" content="{{description}}">
    {{/if}}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Mono:400,500,700&display=swap"/>
  </head>
  <body class="{{page-attribute-classes 'notoc'}}">
    {{> scripts-top}}
    {{> icons}}
    {{> main}}
    {{> scripts-bottom}}
  </body>
</html>
